@page
@model Work_IO.Pages.RegisterUserModel
@{
    ViewData["Title"] = "RegisterUser";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="container-page">
            <h3 class="dark-grey">Registro de usuario [Solo acceso del admin]</h3>
            <div class="col-md-12">

                <div class="form-group col-lg-12">
                    <label asp-for="Usuario.UserName">Nombre del candidato</label>
                    <input type="text" asp-for="Usuario.UserName" class="form-control form-text" placeholder="Usuario">
                    <span class="text-danger" asp-validation-for="Usuario.UserName"></span>
                </div>

                <div class="form-group col-lg-12">
                    <label asp-for="Usuario.Password">Nombre del candidato</label>
                    <input type="password" asp-for="Usuario.Password" class="form-control form-text" placeholder="Password">
                    <span class="text-danger" asp-validation-for="Usuario.Password"></span>
                </div>


                <div class="col-xs-12 col-md-6"><button type="submit" value="" class="btn btn-success btn-block btn-lg">Registrar</button></div>
                <div class="col-xs-12 col-md-6"><a asp-page="/Index" class="btn btn-primary btn-block btn-lg">Cancelar</a></div>

            </div>
        </div>
    </form>
</div>
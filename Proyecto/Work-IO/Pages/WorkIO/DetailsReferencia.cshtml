@page
@model Work_IO.Pages.WorkIO.DetailsReferenciaModel
@{
    ViewData["Title"] = "DetailsReferencia";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container-fluid">
    <section class="">
        <form method="post" enctype="multipart/form-data">
            <h3 class="dark-grey">Detalles de referencias</h3>
            <div class="col-md-6">

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.NomEmpresa">Nombre de la empresa:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.NomEmpresa</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.Telefono">Telefono:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.Telefono</label>
                </div>

                <div class="form-group col-lg-12">
                    <label asp-for="Referencia.Direccion">Direccion:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.Direccion</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.NomInformante">Nombre del informante:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.NomInformante</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.NomJefe">Nombre del jefe:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.NomJefe</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.PuestoInformante">Puesto del informante:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.PuestoInformante</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.PuestoJefe">Puesto del jefe:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.PuestoJefe</label>
                </div>

            </div>

            <div class="col-md-6">

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.PuestoCandidato">Puesto del candidato:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.PuestoCandidato</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.SueldoMensual">Sueldo mensual:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.SueldoMensual</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.InicioLabores">Inicio de labores:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.InicioLabores</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.FinLabores">Fin de labores:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.FinLabores</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.Contrato">Tipo de contrato:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.Contrato</label>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Referencia.Funcion">Funciones del puesto:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.Funcion</label>
                </div>

                <div class="form-group col-lg-12">
                    <label asp-for="Referencia.Motivo">Motivos de separacion:</label>
                    <label class="form-control form-text" role="textbox">@Model.Referencia.Motivo</label>
                </div>
            </div>
        </form>
    </section>
</div>
@page
@model Work_IO.Pages.WorkIO.RegisterCandidatoModel
@{
    ViewData["Title"] = "RegisterCandidato";
}
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div class="container-page">
            <h3 class="dark-grey">Registro del candidato</h3>
            <div class="col-md-6">

                <div class="form-group col-lg-12">
                    <label for="empresa">Nombre de la empresa:</label>
                    <select name="empresas" id="empresas" class="form-control">
                        <option value="">--</option>
                        <option value="">Aquí van las empresas registradas</option>
                    </select>
                </div>

                <div class="form-group col-lg-12">
                    <label asp-for="Candidato.Nombre">Nombre completo</label>
                    <input type="text" asp-for="Candidato.Nombre" class="form-control form-text" placeholder="Nombre completo">
                    <span class="text-danger" asp-validation-for="Candidato.Nombre"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Candidato.Sexo">Sexo</label>
                    <select name="sexo" id="sexo" class="form-control" asp-for="Candidato.Sexo">
                        <option>--</option>
                        <option value="masculino">MASCULINO</option>
                        <option value="femenino">FEMENINO</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Candidato.Sexo"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Candidato.Edad">Edad</label>
                    <input type="text" asp-for="Candidato.Edad" class="form-control form-text" placeholder="Edad">
                    <span class="text-danger" asp-validation-for="Candidato.Edad"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Candidato.FNacimiento">Birthday:</label>
                    <input type="date" asp-for="Candidato.FNacimiento" id="birthday" class="form-control" name="birthday">
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Candidato.LNacimiento">Edad</label>
                    <input type="text" asp-for="Candidato.LNacimiento" class="form-control form-text" placeholder="Lugar de nacimiento">
                    <span class="text-danger" asp-validation-for="Candidato.LNacimiento"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Documentos.Rfc">RFC</label>
                    <input type="text" asp-for="Documentos.Rfc" class="form-control form-text" placeholder="RFC">
                    <span class="text-danger" asp-validation-for="Documentos.Rfc"></span>
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Documentos.Curp">CURP</label>
                    <input type="text" asp-for="Documentos.Curp" class="form-control form-text" placeholder="CURP">
                    <span class="text-danger" asp-validation-for="Documentos.Curp"></span>
                </div>



            </div>

            <div class="col-md-6">

                <div class="form-group col-lg-6">
                    <label asp-for="Candidato.Nacionalidad">Nacionalidad</label>
                    <input type="text" asp-for="Candidato.Nacionalidad" class="form-control form-text" placeholder="Nacionalidad">
                    
                </div>

                <div class="form-group col-lg-6">
                    <label asp-for="Documentos.Imss">IMSS</label>
                    <input type="text" asp-for="Documentos.Imss" class="form-control form-text" placeholder="IMSS>
                    <span class="text-danger" asp-validation-for="Documentos.Imss"></span>
                </div>


                <div class="form-group col-lg-6">
                    <input type="checkbox" id="ine" name="INE" asp-for="Documentos.Ine">
                    <label for="ine"> INE</label><br>
                    <input type="checkbox" id="licencia" name="Licencia" asp-for="Documentos.Licencia">
                    <label for="licencia"> Licencia de manejo</label><br>
                    <input type="checkbox" id="antecedentes" name="Antecedentes" asp-for="Documentos.Antecedentes">
                    <label for="antecedentes"> Antecedentes penales</label><br>
                </div>

                <div class="form-group col-lg-6">
                    <input type="checkbox" id="cartilla" name="Cartilla" asp-for="Documentos.Cartilla">
                    <label for="pasaporte"> Cartilla militar</label><br>
                    <input type="checkbox" id="pasaporte" name="Pasaporte" asp-for="Documentos.Pasaporte">
                    <label for="pasaporte"> Pasaporte laboral</label><br>
                    <input type="checkbox" id="visa" name="visa" asp-for="Documentos.Visa">
                    <label for="visa"> Visa</label><br>
                    <br /><br /><br /><br /><br /><br /><br />
                </div>

                <div class="col-xs-12 col-md-6"><button type="submit" value="" class="btn btn-success btn-block btn-lg">Registrar</button></div>
                <div class="col-xs-12 col-md-6"><a asp-page="/Index" class="btn btn-primary btn-block btn-lg">Cancelar</a></div>
            </div>
        </div>
    </form>
</div>
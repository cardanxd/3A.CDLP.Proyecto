@page
@model Work_IO.Pages.WorkIO.RegisterOrdenModel
@{
    ViewData["Title"] = "RegisterOrden";
}

<h1>Registro de Orden</h1>
<div class="container">

    <div class="row">
        <div class="">
            <form method="post" enctype="multipart/form-data">
                <hr class="colorgraph">
                <div class="row">
                    <div class="form-group col-lg-12">

                        <div class="form-group col-lg-12">
                            <label asp-for="Orden.EmpresaID">Empresa:</label>
                            <select class="custom-select mb-3" asp-for="Orden.EmpresaID"
                                    asp-items="@(new SelectList(Model.EmpresaList,"Id","Nombre"))">
                                <option>Seleccione una empresa</option>
                            </select>
                        </div>

                        <div class="form-group col-lg-12">
                            <input type="text" asp-for="Orden.Nombre" class="form-control form-text" placeholder="Titulo del Orden">
                            <span class="text-danger" asp-validation-for="Orden.Nombre"></span>
                        </div>

                        <div class="form-group col-lg-12">
                            <input type="text" asp-for="Orden.TipoContrato" class="form-control form-text" placeholder="Puesto solicitado">
                            <span class="text-danger" asp-validation-for="Orden.TipoContrato"></span>
                        </div>

                        <div class="form-group col-lg-12">
                            <input type="tel" asp-for="Orden.FechaLimite" class="form-control form-text" placeholder="Fecha limite">
                            <span class="text-danger" asp-validation-for="Orden.FechaLimite"></span>
                        </div>
                        <label asp-for="Orden.Descripcion">Descripcion:</label>
                        <div class="form-group col-lg-12">

                            <textarea asp-for="Orden.Descripcion" rows="5" cols="50" id="Descripcion"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-xl-3 col-md-6"><button type="submit" value="" class="btn btn-success btn-block btn-lg">Registrar</button></div>
                            <div class="col-xl-3 col-md-6"><a asp-page="/WorkIO/Index" class="btn btn-primary btn-block btn-lg">Cancelar</a></div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>
@page "{id:int?}"
@model Work_IO.Pages.WorkIO.EditEmpresaModel
@{
    ViewData["Title"] = "EditEmpresa";
}

<h1>Editar empresa @Model.Empresa.Nombre</h1>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Empresa.Id" type="hidden" />
    <div>
        <label asp-for="Empresa.Nombre"></label>
        <div>
            <input asp-for="Empresa.Nombre" class="form-control form-text" />
            <span asp-validation-for="Empresa.Nombre"></span>
        </div>

        <label asp-for="Empresa.NomContacto"></label>
        <div>
            <input asp-for="Empresa.NomContacto" class="form-control form-text" />
            <span asp-validation-for="Empresa.NomContacto"></span>
        </div>

        <label asp-for="Empresa.NumContacto"></label>
        <div>
            <input asp-for="Empresa.NumContacto" class="form-control form-text" />
            <span asp-validation-for="Empresa.NumContacto"></span>
        </div>

        <label asp-for="Empresa.Email"></label>
        <div>
            <input asp-for="Empresa.Email" class="form-control form-text" />
            <span asp-validation-for="Empresa.Email"></span>
        </div>

        <label asp-for="Empresa.Direccion"></label>
        <div>
            <input asp-for="Empresa.Direccion" class="form-control form-text" />
        </div>

    </div>
</form><br />
<div>
    <button type="submit" value="" class="btn btn-success">Guardar</button>
    <a asp-page="/WorkIO/EmpresasRegistradas" class="btn btn-primary">Cancelar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
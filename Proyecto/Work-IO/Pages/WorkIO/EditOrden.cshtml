@page "{id:int?}"
@model Work_IO.Pages.WorkIO.EditOrdenModel
@{
    ViewData["Title"] = "EditOrden";
}

<h1>EditOrden</h1>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="Orden.Id" type="hidden" />
    <div class="col-md-12">

        <div class="form-group col-lg-12">
            <label asp-for="Orden.EmpresaID">Empresa:</label>
            <select asp-for="Orden.EmpresaID"
                    asp-items="@(new SelectList(Model.EmpresaList,"Id","Nombre"))">
                <option>Seleccione una empresa</option>
            </select>
        </div>

        <div class="form-group col-lg-12">
            <label asp-for="Orden.Nombre"></label>
            <input asp-for="Orden.Nombre" class="form-control form-text" />
            <span asp-validation-for="Orden.Nombre"></span>
        </div>

        <div class="form-group col-lg-6">
            <label asp-for="Orden.TipoContrato"></label>
            <input type="text" asp-for="Orden.TipoContrato" class="form-control form-text">
            <span asp-validation-for="Orden.TipoContrato"></span>
        </div>

        <div class="form-group col-lg-6">
            <label asp-for="Orden.FechaLimite"></label>
            <input type="text" asp-for="Orden.FechaLimite" class="form-control">
        </div>

        <div class="form-group col-lg-6">
            <label asp-for="Orden.Descripcion"></label>
            <textarea asp-for="Orden.Descripcion" rows="5" cols="50" id="Descripcion"></textarea>
        </div>

    </div>

    <div class="col-xs-6 col-md-6">
        <button type="submit" value="" class="btn btn-success btn-block btn-lg">Guardar</button>
        <a asp-page="/WorkIO/OrdenesRegistrados" class="btn btn-primary btn-block btn-lg">Cancelar</a>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}